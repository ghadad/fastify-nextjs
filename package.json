{
  "name": "fastify-nextjs",
  "version": "4.0.0",
  "description": "React server side rendering support for Fastify with Next",
  "main": "server.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "dev": "node server.js",
    "test": "yarn build && cross-env NODE_ENV=production tap test.js",
    "jest": "cross-env NODE_ENV=test jest --watch",
    "build": "cross-env NODE_ENV=production next build",
    "export": "yarn build && cross-env NODE_ENV=production next export",
    "analyze": "cross-env BUNDLE_ANALYZE=both next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
    "serve": "yarn build && cross-env NODE_ENV=production node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fastify/fastify-nextjs.git"
  },
  "keywords": [
    "fastify",
    "react",
    "next",
    "ssr",
    "server",
    "side",
    "rendering"
  ],
  "author": "Tomas Della Vedova - @delvedor (http://delved.org)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fastify/fastify-nextjs/issues"
  },
  "homepage": "https://github.com/fastify/fastify-nextjs#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "fastify-plugin": "^1.2.1",
    "next-offline": "^3.3.5"
  },
  "devDependencies": {
    "@zeit/next-bundle-analyzer": "^0.1.2",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.0.0",
    "cross-env": "^5.2.0",
    "fastify": "^2.0.0-rc.4",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "jest-dom": "^3.0.1",
    "next": "^8.0.0-canary.15",
    "prettier": "1.16.1",
    "pretty-quick": "^1.10.0",
    "react": "^16.8.0-alpha.1",
    "react-addons-test-utils": "^16.0.0-alpha.3",
    "react-dom": "^16.8.0-alpha.1",
    "react-test-renderer": "^16.8.0-alpha.1",
    "react-testing-library": "^5.4.4",
    "tap": "^12.1.0"
  }
}
